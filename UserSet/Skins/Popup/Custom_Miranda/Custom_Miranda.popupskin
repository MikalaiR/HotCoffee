#==========Clock===================================================================================
object
	ifset 8
	ifset 4
	type clock
	source clock.png
	mono
	layer
	clocksize 3 4 8 6 8 8 8 8 8 8 8 8 0 0 4
	x window.width-8-clock.width
	y 4
end
object
	ifset 8
	ifnotset 4
	type clock
	source clock.png
	layer
	clocksize 3 4 8 6 8 8 8 8 8 8 8 8 0 0 4
	x window.width-8-clock.width
	y 4
end

